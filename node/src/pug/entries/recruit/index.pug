extends ../../_include/_layout
block vars
	- var pageTitle = "採用情報"
	- var assetsPath = "../"
	- var pageKey = "recruit/index"
	- var scriptFlag = false



block contents
	.l-head
		h1.m-ttl RECRUIT#[span 採用情報]

	section.l-recruit

		//- リクルート全体
		.recruit__items.inner
			//- リクルートトップ
			section.recruit__top
				ul.recruit__top__imglist
					-
						var items = [
							{img: " ../assets/img/recruit/recruit_01.jpg", ttl: ""},
							{img: " ../assets/img/recruit/recruit_02.jpg", ttl: ""},
							{img: " ../assets/img/recruit/recruit_03.jpg",ttl: ""},
						]
					each item in items
						li.recruit__top__img
							img(style="background-image: url(" + item.img + ")")

					li.recruit__top__joinus
						img(src=" ../assets/img/recruit/joinus.svg")

				h2.m-ttl2
					|「ありがとう」で結ばれる会社で
					br
					|共に夢を叶えませんか？
				p.recruit__top__subsentence
					|オフィス・ラボは精鋭集団をモットーに創業以来、順調に業績を伸ばし
					br
					|続けております。業績拡大に伴い、以下の人材を募集します。

			.inner.-m
				//- リクルートリンク
				.recruit__pagelinks
					ul.recruit__pagelink__new
						li NEW
						li 新卒採用
						li.arrow
						a(href="#new")
					ul.recruit__pagelink__mid
						li MID
						li キャリア採用
						li.arrow
						a(href="#mid")

					//- 新卒採用
				section.recruit__pattern#new
					h3.recruit__pattern__ttl 新卒採用
					.table
						.tr
							.th 職種
							.td (1) オフィスコンサルタント（法人営業） #[br.spbr](2) 設計デザイナー
						.tr
							.th 仕事内容
							.td
								| (1) オフィスを中心とした新設・移転をお考えのお客様に向けた、プロジェクト全体のマネジメント業務
								br
								| (2) オフィスを中心とした空間デザインとプロデュース業務
						.tr
							.th 応募資格
							.td
								| コミュニケーションを取ることが好きな方
								br
								| 自ら考え自ら積極的に行動できる方 現状に満足する事無く、より高い成果を目指せる方
								br
								| 組織の一員として高い目標を共に目指せる方
								br
								| 建築、美術、空間デザイン等の学科専攻の方 尚可
								br
								| 空間デザインに対する意欲と情熱のある方（AutoCad、Illustrator、Photoshop、3Dソフトの経験者 歓迎）
						.tr
							.th 勤務条件
							.td
								| 勤務地：本社 最寄駅：銀座線 三越前駅徒歩2分 / JR 新日本橋駅徒歩2分 / JR 神田駅徒歩5分 / 日比谷線 小伝馬町駅徒歩5分
								br
								| 初任給：大卒223,000円、短大卒210,000円、専門卒205,000円（平成29年度実績）
								br
								| 待遇・福利厚生：交通費支給（上限3万円/月）、社会保険完備、昇給（年1回）、賞与（年2回）、社員研修旅行（年1回）、産休育休取得実績あり
								br
								| 休日・休暇：土・日・祝日（土曜日は月2回程度出勤有り）/ 年末年始休暇、夏季休暇、慶弔休暇他に有給休暇
								br
								| 試用期間：6ヶ月
						.tr
							.th 採用実績（学校）
							.td
								span.m-bold 大学院
								br
								| 名古屋大学大学院
								br
								span.m-bold 大学
								br
								| 慶応義塾大学、お茶の水女子大学、首都大学東京、東京理科大学、青山学院大学、法政大学、東京農業大学 桜美林大学、学習院大学、東海大学、東京造形大学、大阪芸術大学、千葉工業大学
								br
								span.m-bold 短大・高専・専門学校
								br
								| 北海道自動車短期大学秋田経済法科大学、中央工学校、東京デザイナー学院 等々

					button.m-btn(type="button") 新卒採用エントリー

